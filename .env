# Server Configuration
SERVER_ADDRESS=:8080
LOG_LEVEL=debug
ENV=development

# JWT Configuration
JWT_SECRET=generate_a_secure_random_string_here

# OAuth2 Configuration
AUTH_URL=https://fansly.com/oauth2/authorize
TOKEN_URL=https://fansly.com/oauth2/token
CALLBACK_URL=http://localhost:8080/api/v1/auth/callback
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret
SCOPES=users.read,media.read

# Session Configuration
SESSION_SECRET=generate_another_secure_random_string_here
SESSION_MAX_AGE=86400  # 24 hours in seconds
